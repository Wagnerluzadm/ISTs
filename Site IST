    <script>
        let quizAnswers = [];
        function showSection(sectionId, ev) {
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
            document.getElementById(sectionId).classList.add('active');
            if(ev && ev.currentTarget) ev.currentTarget.classList.add('active');
        }
        function selectOption(element, isCorrect) {
            const question = element.closest('.question');
            question.querySelectorAll('.option').forEach(opt => opt.classList.remove('selected'));
            element.classList.add('selected');
            const questionIndex = Array.from(document.querySelectorAll('.question')).indexOf(question);
            quizAnswers[questionIndex] = isCorrect;
        }
        function checkQuiz() {
            const totalQuestions = document.querySelectorAll('.question').length;
            const resultDiv = document.getElementById('quiz-result');
            const resultText = document.getElementById('result-text');
            if(quizAnswers.length < totalQuestions) {
                resultText.textContent = 'Por favor, responda todas as perguntas antes de ver o resultado.';
                resultDiv.className = 'result show warning';
                return;
            }
            const correctAnswers = quizAnswers.filter(a => a===true).length;
            const percentage = (correctAnswers/totalQuestions)*100;
            if(percentage >= 70) {
                resultText.textContent = `Parab√©ns! Voc√™ acertou ${correctAnswers} de ${totalQuestions} (${percentage.toFixed(0)}%).`;
                resultDiv.className = 'result show good';
            } else {
                resultText.textContent = `Voc√™ acertou ${correctAnswers} de ${totalQuestions} (${percentage.toFixed(0)}%). Recomendamos revisar as informa√ß√µes.`;
                resultDiv.className = 'result show warning';
            }
        }
    </script>
